<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="15dp"
                android:paddingLeft="10dp"
    >

    <ImageView
        android:id="@+id/fragment_my_item1_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/my_1"/>

    <TextView
        android:id="@+id/fragment_my_item1_tv"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/fragment_my_item1_iv"
        android:text="当前订单"/>

    <ImageView
        android:id="@+id/fragment_my_item1_iv2"
        android:layout_centerVertical="true"
        android:src="@mipmap/my_arrow"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/fragment_my_item1_tv2"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/holo_red_light"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/fragment_my_item1_iv2"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>